<div class="container">
  
  <div class="span-12">
    
    <h1>Simple Vibrating Grizzly Capacity Guide</h1>

    <table class="tables">
      <thead>
        <tr>
          <th>Name</th>
          <th>Nominal opening</th>
          <th>Grizzly width</th>
          <th>Grizzly length</th>
          <th>Approximate TPH</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @simple_vibrating_grizzlies.each do |simple_vibrating_grizzly| %>
          <tr>
            <td><%= link_to "#{simple_vibrating_grizzly.column_name}", simple_vibrating_grizzly %></td>
            <td><%= simple_vibrating_grizzly.nominal_opening %></td>
            <td><%= simple_vibrating_grizzly.grizzly_width %></td>
            <td><%= simple_vibrating_grizzly.grizzly_length %></td>
            <td><strong class="green-text"><%= simple_vibrating_grizzly.approximate_tph.round(0) %></strong></td>
            <td><%= link_to 'Edit', edit_simple_vibrating_grizzly_path(simple_vibrating_grizzly) %></td>
            <td><%= link_to 'Destroy', simple_vibrating_grizzly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Simple vibrating grizzly', new_simple_vibrating_grizzly_path %>


  </div>

</div>